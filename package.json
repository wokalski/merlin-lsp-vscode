{
	"name": "merlin-lsp-vscode",
	"version": "1.0.0",
	"description": "A VSCode plugin for OCaml and Reason editor integration via merlin-lsp",
	"author": "Wojtek Czekalski <me@wczekalski.com>",
	"license": "MIT",
	"categories": [],
	"engines": {
		"vscode": "^1.33.0"
	},
  "scripts": {
    "build": "bsb -make-world",
    "watch": "bsb -make-world -w"
  },
	"activationEvents": [
		"onLanguage:reason",
		"onLanguage:ocaml"
	],
	"main": "./src/Index.bs.js",
	"contributes": {
    "languages": [
      {
        "id": "reason",
        "aliases": [
          "Reason"
        ],
        "extensions": [
          ".re",
          ".rei"
        ],
        "configuration": "./language/reason.json"
      },
      {
        "id": "ocaml",
        "aliases": [
          "OCaml"
        ],
        "extensions": [
          ".ml",
          ".mli"
        ],
        "configuration": "./language/ocaml.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Merlin configuration",
      "properties": {}
    },
    "grammars": [
      {
        "language": "ocaml",
        "scopeName": "source.ocaml",
        "path": "./syntax/ocaml.json"
      },
      {
        "language": "reason",
        "scopeName": "source.reason",
        "path": "./syntax/reason.json"
      }
    ]
  },
	"dependencies": {
		"bs-platform": "^7.0.1",
		"vscode": "^1.1.36",
		"vscode-languageclient": "^5.2.1"
	}
}
